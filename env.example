# Supabase Configuration
# Get these from your Supabase project settings: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Polar Payment Processing
# Get these from Polar dashboard: https://polar.sh/settings
POLAR_ACCESS_TOKEN=your-polar-access-token
POLAR_WEBHOOK_SECRET=your-polar-webhook-secret
POLAR_SERVER=sandbox
# Set to 'production' when ready to go live

# Sentry Error Monitoring
# Get these from Sentry project settings: https://sentry.io/settings/
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Application Configuration
# Maximum file upload size in bytes (default: 8MB)
UPLOAD_MAX_BYTES=8388608
# Maximum workspace logo size in bytes (default: 8MB)
WORKSPACE_LOGO_MAX_BYTES=8388608
# Maximum number of workspaces per user (default: 3)
MAX_WORKSPACES=3

# Environment
NODE_ENV=development
# Set to 'production' when deploying

# Upstash Redis (for Rate Limiting)
# Get these from Upstash console: https://console.upstash.com/
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Vercel Configuration for custom domains
# Get these from Vercel dashboard: https://vercel.com/dashboard
VERCEL_PROJECT_ID=
VERCEL_TEAM_ID=
VERCEL_API_TOKEN=

# Admin User ID (for monitoring)
ADMIN_USER_ID=